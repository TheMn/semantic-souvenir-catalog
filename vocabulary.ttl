@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix my: <https://themn.github.io/semantic-souvenir-catalog/vocabulary.ttl#> .

# My Travel Souvenirs Vocabulary (T-Box)
# This file defines the custom terms for the project.
# It does NOT contain instance data.

# Class Definition
my:Souvenir a rdfs:Class ;
    rdfs:label "Souvenir" ;
    rdfs:comment "A memento bought during a trip." ;
    rdfs:subClassOf schema:CreativeWork .

# Property Definitions
my:boughtIn a rdf:Property ;
    rdfs:label "boughtIn" ;
    rdfs:comment "The city where the souvenir was obtained." ;
    rdfs:domain my:Souvenir ;
    rdfs:range schema:City .

my:tripDate a rdf:Property ;
    rdfs:label "tripDate" ;
    rdfs:comment "The date when the trip took place." ;
    rdfs:domain my:Souvenir ;
    rdfs:range schema:Date .

my:buyer a rdf:Property ;
    rdfs:label "buyer" ;
    rdfs:comment "The person who purchased the item." ;
    rdfs:domain my:Souvenir ;
    rdfs:range schema:Person .
